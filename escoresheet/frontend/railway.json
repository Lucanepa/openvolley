{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npx serve dist -s -l tcp://0.0.0.0:${PORT:-3000}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
