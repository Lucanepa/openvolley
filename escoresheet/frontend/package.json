{
  "name": "escoresheet",
  "version": "1.2.2",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "description": "Openvolley eScoresheet - Offline-first volleyball match scoring application",
  "author": "Luca Canepa <luca.canepa@gmail.com>",
  "homepage": "https://github.com/lucacanepa/openvolley",
  "scripts": {
    "dev": "vite",
    "dev:https": "cross-env VITE_HTTPS=true vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "start:prod": "npm run build && node server.js",
    "start:https": "cross-env HTTPS=true node server.js",
    "start:prod:https": "npm run build && cross-env HTTPS=true node server.js",
    "generate-certs": "node generate-certs.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron electron/main.js\"",
    "electron:clean": "node -e \"const fs=require('fs'); try{fs.rmSync('dist-electron',{recursive:true,force:true})}catch(e){console.log('Clean failed, continuing...')}\"",
    "electron:build": "npm run electron:clean && cross-env ELECTRON=true npm run build && electron-builder",
    "electron:build:win": "npm run electron:clean && cross-env ELECTRON=true npm run build && electron-builder --win",
    "electron:build:win:pwsh": "npm run electron:clean && $env:ELECTRON='true'; npm run build; electron-builder --win",
    "electron:build:mac": "npm run electron:clean && cross-env ELECTRON=true npm run build && electron-builder --mac",
    "electron:build:linux": "npm run electron:clean && cross-env ELECTRON=true npm run build && electron-builder --linux",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "cap:build:android": "npm run build && cap sync android",
    "cap:build:ios": "npm run build && cap sync ios"
  },
  "dependencies": {
    "dexie": "^4.0.8",
    "jspdf": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@supabase/supabase-js": "^2.45.0",
    "dexie-react-hooks": "^1.1.7",
    "pdfjs-dist": "^3.11.174",
    "pdf-lib": "^1.17.1",
    "html2canvas": "^1.4.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "vite": "^5.4.11",
    "@vitejs/plugin-react": "^4.3.1",
    "vite-plugin-pwa": "^0.17.5",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "@capacitor/core": "^5.5.1",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/android": "^5.5.1",
    "@capacitor/ios": "^5.5.1"
  },
  "build": {
    "appId": "com.openvolley.escoresheet",
    "productName": "Openvolley eScoresheet",
    "directories": {
      "output": "dist-electron"
    },
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!electron/README.md",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "electron/icon.icns",
      "category": "public.app-category.sports"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}


